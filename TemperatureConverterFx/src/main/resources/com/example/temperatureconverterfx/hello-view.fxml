<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.temperatureconverterfx.HelloController"
      alignment="CENTER"
      spacing="10">

    <Label text="Temperature Converter" style="-fx-font-size: 24px; -fx-font-weight: bold; "/>
    <Label text="Enter Temperature Value: " style="-fx-font-size: 15px; -fx-alignment: LEFT_BASELINE;"/>
    <TextField fx:id="temperatureField" />
    <Label text="Select Original Unit: " style= "-fx-alignment: LEFT_BASELINE;"/>
    <RadioButton fx:id="celsiusRadio" text="Celsius" />
    <RadioButton fx:id="fahrenheitRadio" text="Fahrenheit" />
    <RadioButton fx:id="kelvinRadio" text="Kelvin" />
    <Button fx:id="convertButton" text="Convert" onAction="#handleConvertButtonAction"/>
    <Label fx:id="resultLabel" text=""/>

</VBox>